@model Shop.UI.Models.ProdutoViewModel

<div class="row">



        <div class="col-sm-4" style="margin-top:10px">

            <div class="card" style="width: 18rem;">

                <img class="card-img-top" data-src="holder.js/100px180/" alt="100%x180" style="height: 280px; width: 100%; display: block; margin-top:5px;" src="" data-holder-rendered="true">

                <div class="card-body">
                    <h5 class="card-title">@Model.produto.Nome</h5>
                    <input type="text" name="valor" value="@Model.produto.ValorFormatado" />
                    <i class="fa fa-cart-plus" style="font-size:24px"></i>
                </div>
            </div>
        </div>



</div>